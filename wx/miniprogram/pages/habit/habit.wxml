<!--pages/habit/habit.wxml-->
<view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">不允许为空</view>
<view class='habit' wx:if="{{!loading}}">

    <navigator url="/pages/md/md?key=habitRule" hover-class="navigator-hover">
        查看例行公事规则
    </navigator>

    <!-- <navigator
      url="/pages/index/index"
      open-type="switchTab"
      hover-class="other-navigator-hover"
    >
      indexu首页
    </navigator> -->


    <view class="weui-cells weui-cells_after-title" wx:if="{{pageStatus==1}}">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
                <input class="weui-input" bindinput="bindInputHabitName" placeholder="请输入例行公事 最多20字" maxlength="20" />
            </view>
        </view>
    </view>
    <view wx:if="{{pageStatus==1}}">
        <view class="habit-name">
            <text>{{habitName}}</text>
        </view>
        <view class="weui-flex">
            <view class="weui-flex__item">
                <view class="placeholder">weui</view>
            </view>
            <view class="weui-flex__item">
                <view class="placeholder">weui</view>
            </view>
        </view>
    </view>
    <button bindtap='onSubmit' class="weui-btn" type="primary" disabled="{{disabled}}">{{pageStatus==1?"创建例行公事":"今日打卡"}}</button>
    <button bindtag='onDel' class="weui-btn mini-btn" type="default" size="mini" wx:if="{{pageStatus==2}}">删除当前例行公事</button>
</view>

<view class="weui-loadmore" wx:if="{{loading}}">
    <view class="weui-loading"></view>
    <view class="weui-loadmore__tips">正在加载</view>
</view>